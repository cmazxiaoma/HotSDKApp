<?xml version="1.0" encoding="utf-8"?>
<com.example.administrator.cmazxiaoma.view.DispatchLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/sms_reply"
        android:background="@drawable/sms_bg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp">
       <LinearLayout
           android:padding="10dp"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_receive_sms"/>
           <TextView
               android:paddingStart="12dp"
               android:padding="4dp"
               android:textSize="18sp"
               android:text="@string/sms"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />
       </LinearLayout>
        <LinearLayout
            android:paddingStart="12dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/sms_phone"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="15827557996"/>
            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/sms_content"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="[沉梦]亲爱的沉梦会员，感谢您注册"/>
            </LinearLayout>
    </LinearLayout>
    </com.example.administrator.cmazxiaoma.view.DispatchLinearLayout>