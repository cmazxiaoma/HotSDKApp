<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:inputType="phone"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:id="@+id/query_phone"
            android:paddingLeft="25dp"
            android:hint="@string/query_phone"
            android:layout_width="300dp"
            android:layout_height="50dp"/>
        <Button
            android:textSize="20sp"
            android:enabled="false"
            android:id="@+id/btn_query_phone"
            android:background="@drawable/btn_bg"
            android:text="@string/btn_query_phone"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content"/>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/query_phone_linear"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/query_phone_img"
            android:layout_width="200dp"
            android:layout_height="100dp"/>
        <TextView
            android:padding="5dp"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:id="@+id/phone_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="5dp"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:id="@+id/phone_location_postcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="5dp"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:id="@+id/phone_location_city_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="5dp"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:id="@+id/phone_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </LinearLayout>